{
    "compilerOptions": {
        "target": "es2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": "./*",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "**/*",
        "swagger.yaml"
    ],
    "exclude": [
        "node_modules",
        "dist/"
    ]
}